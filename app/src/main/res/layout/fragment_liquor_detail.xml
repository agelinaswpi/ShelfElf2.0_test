<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
       <ImageView
           android:id="@+id/detail_image_view"
           android:layout_width="300dp"
           android:layout_height="300dp"
           android:layout_alignParentLeft="true"
           android:padding="20dp"/>
        <TextView
            android:id="@+id/detail_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of the liquor"
            android:textSize="45sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_toRightOf="@id/detail_image_view"/>
        <TextView
            android:id="@+id/detail_abv_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40%"
            android:textSize="40sp"
            android:layout_below="@id/detail_name_text_view"
            android:layout_toRightOf="@id/detail_image_view"
            android:padding="10dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/detail_desc_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:text="description"/>

</LinearLayout>